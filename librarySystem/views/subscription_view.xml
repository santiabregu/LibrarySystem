<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Employee menu item definition -->
        <record id="memberSubscription_form_view" model="ir.ui.view">
            <field name="name">library.memberSubscription.form</field>
            <field name="model">library.memberSubscription</field>
            <field name="arch" type="xml">
                <form string="Subscription">
                    <sheet>
                            <group>
                                <field name="subscription_name"/>
                                <field name="price"/>
                                <field name="duration_in_weeks"/>

                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="author_tree_view" model="ir.ui.view">
            <field name="name">library.author.tree</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <tree string="Author">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="author_search_view" model="ir.ui.view">
            <field name="name">library.author.search</field>
            <field name="model">library.author</field>
            <field name="arch" type="xml">
                <search string="Author">
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="id"/>
                </search>
            </field>
        </record>

        <record id="author_act_window" model="ir.actions.act_window">
            <field name="name">Author</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">library.author</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Author.
                </p>
            </field>
        </record>

        <menuitem name="Author" id="author_menu" parent="book_root" action="author_act_window" sequence="30"/>
    </data>
</odoo>