<odoo>
    <data>
        <!-- Employee menu item definition -->
        <record id="member_form_view" model="ir.ui.view">
            <field name="name">library.member.form</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <form string="Member">
                    <sheet>
                        <group>
                            <field name="id"/>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="membership_date"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="subscription_type" required="1" widget="many2one" options="{'no_create': True, 'search_default_subscription_name': True}" invisible="id"/>
                            <field name="last_member_subscription_id" invisible="not id"/>
                            <field name="is_last_subscription_active" invisible="not id"/>
                            <button name="action_open_borrow_wizard" type="object" string="Add Borrow" class="oe_highlight" invisible="not (id and is_last_subscription_active)"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="member_tree_view" model="ir.ui.view">
            <field name="name">library.member.tree</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <tree string="Member">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="member_search_view" model="ir.ui.view">
            <field name="name">library.member.search</field>
            <field name="model">library.member</field>
            <field name="arch" type="xml">
                <search string="Member">
                    <field name="name"/>
                    <field name="phone"/>
                </search>
            </field>
        </record>

        <record id="member_act_window" model="ir.actions.act_window">
            <field name="name">Member</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">library.member</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Member.
                </p>
            </field>
        </record>

        <menuitem name="Member" id="member_menu" parent="commprog_root" action="member_act_window" sequence="10"/>
    </data>
</odoo>